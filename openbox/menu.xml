<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">
<menu id="desktop-app-menu"
      label="Applications"
      execute="openbox-menu" />
<menu id="system-menu" label="Preferences">
  <menu id="obconf" label="Configure Desktop">
    <item label="Reconfigure Openbox">
      <action name="Reconfigure" />
    </item>
    <item label="Lxappearance">
      <action name="Execute">
        <command>lxappearance</command>
        <startupnotify><enabled>yes</enabled></startupnotify>
      </action>
    </item>
    <item label="Configure Openbox ">
      <action name="Execute">
        <command>obconf</command>
        <startupnotify><enabled>yes</enabled></startupnotify>
      </action>
    </item>
    <item label="Edit Keybinds etc">
      <action name="Execute">
        <command>emacs ~/.config/openbox/lxde-rc.xml</command>
        <startupnotify><enabled>yes</enabled></startupnotify>
      </action>
    </item>
    <item label="Edit Menu">
      <action name="Execute">
        <command>emacs ~/.config/openbox/menu.xml</command>
        <startupnotify><enabled>yes</enabled></startupnotify>
      </action>
    </item>
    <item label="Edit Autostart">
      <action name="Execute">
        <command>emacs ~/.config/lxsession/LXDE/autostart</command>
        <startupnotify><enabled>yes</enabled></startupnotify>
      </action>
    </item>
  </menu>
  <separator />
  <menu id="keybinds" label="Keybinds">
    <separator label="W+t...lxterminal"/>
    <item label="and so on...">
    </item>
  </menu>
</menu>

<menu id="root-menu" label="Openbox 3"> 
  <separator label="Debian"/>
  <separator />
  <menu execute="/opt/porteus-scripts/lxde/pipemenus/obpipemenu-places" id="pipe" label="GoTo.."/>
  <separator />
  <menu id="desktop-app-menu" />
  <separator />
  <menu id="system-menu"/>
  <separator />
</menu>

</openbox_menu>
